<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainActivity">
    <Button
            android:text="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/treeView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.145"/>
    <Button
            android:text="new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/treeView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.678"/>
    <Button
            android:text="dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seedDlBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/treeView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.417"/>
    <Button
            android:text="upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/treeView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.996"/>
    <Button
            android:text="seed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seedBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/treeView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.996"/>
    <com.example.prototype1.checkabletreeview.views.SingleRecyclerViewImpl
            android:id="@+id/treeView"
            android:layout_width="361dp"
            android:layout_height="509dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/testText"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/treeBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/treeView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.359"/>
    <TextView
            android:text="TextView"
            android:layout_width="382dp"
            android:layout_height="73dp"
            android:id="@+id/testText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>